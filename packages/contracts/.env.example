# JSON-RPC endpoint for the target network (required)
RPC_URL=
# Deployer private key (hex, without quotes) (required)
PRIVATE_KEY=
# Optional safety check to ensure you are on the expected chain
CHAIN_ID=
# If set, skips token deployment and uses this existing token address
TOKEN_ADDRESS=
# Token name for deployment (when TOKEN_ADDRESS is not set)
TOKEN_NAME=
# Token symbol for deployment (when TOKEN_ADDRESS is not set)
TOKEN_SYMBOL=
# Token decimals for deployment (when TOKEN_ADDRESS is not set)
TOKEN_DECIMALS=18
# Address that will be the minter for BridgeToken (defaults to deployer)
MINTER_ADDRESS=
# Address authorized to sign bridge finalizations (defaults to deployer)
OPERATOR_ADDRESS=
# Set to true to run Etherscan verification after deploy
VERIFY=false
# Set to true to keep polling verification status
VERIFY_WATCH=false
# Etherscan API key (required when VERIFY=true)
ETHERSCAN_API_KEY=

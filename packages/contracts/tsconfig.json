{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020"],
    "types": ["node", "vitest/globals"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": [
    "test/viem/**/*.ts",
    "vitest.config.ts",
    "wagmi.bytecode.plugin.ts",
    "src/generated/contracts.ts"
  ]
}
